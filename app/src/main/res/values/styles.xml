<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Button.Green" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:elevation">@dimen/_3sdp</item>
    </style>

    <style name="App.Button.Blue" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:elevation">@dimen/_3sdp</item>
    </style>


    <style name="App.Editable" parent="">
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_30sdp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="drawableTint">@color/blue_300</item>
        <item name="android:background">@drawable/bg_border_grey_with_rounded_corner</item>
    </style>

    <style name="App.Editable.Blue" parent="">
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_30sdp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="drawableTint">@color/blue_300</item>
        <item name="android:background">@drawable/bg_boarder_blue_et</item>
    </style>


    <style name="Theme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored" >
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/blue_200</item> <!-- Active color -->
        <item name="colorSurface">@color/white</item> <!-- Background -->
        <item name="colorOnSurface">@color/black</item> <!-- Inactive color -->
        <item name="elevation">@dimen/_24sdp</item>
    </style>

    <style name="App.Text.Title" parent="">
        <item name="android:textColor">@color/greyed_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.SubHeading" parent="">
        <item name="android:textColor">@color/greyed_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Card.Heading" parent="">
        <item name="android:textColor">@color/greyed_text</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="enforceMaterialTheme">true</item>
        <item name="colorOnSurface">@color/grey_500</item>
        <item name="colorSecondary">@color/blue_300</item>
        <item name="useMaterialThemeColors">true</item>
        <item name="android:minWidth">?attr/minTouchTargetSize</item>
        <item name="android:minHeight">?attr/minTouchTargetSize</item>
    </style>

    <!-- Drop down menu -->

    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ExposedDropdownMenu</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="endIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.ExposedDropdownMenu" parent="">
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryDark">@color/blue_100</item>
        <item name="colorOnSurface">@color/grey_200</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorError">@color/red_200</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <!-- Shapeable Image View-->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="circleImageView20" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="circleImageView10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="Dialog.Back" parent="">
        <item name="android:windowEnterAnimation">@anim/slide_up_and_alpha</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

</resources>